<?xml version="1.0" encoding="utf-8"?><!--최상위 레이아웃. DrawerLayout-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--메인 레이아웃(툴바, 메뉴바, 콘텐츠) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 툴바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/main_left_drawer_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_home_menu"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_home_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 여행기록하기 메뉴바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_user_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_trip_record"
            android:elevation="30dp"
            android:paddingHorizontal="37dp"
            android:paddingVertical="21dp">

            <TextView
                android:id="@+id/main_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="OOO님의 추억"/>

            <TextView
                android:id="@+id/main_user_trip_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/tripbook_main_1"
                android:textSize="24sp"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/main_user_name_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toEndOf="@id/main_user_trip_count_tv"
                app:layout_constraintBottom_toBottomOf="@id/main_user_trip_count_tv"/>

            <LinearLayout
                android:id="@+id/main_content_record_btn_ll"
                android:layout_width="147dp"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_base_main_1_fill"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans_kr_light"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/main_content_record_btn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행 기록하러 가기"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:includeFontPadding="false"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_home_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/main_home_title_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/main_home_title_iv"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:src="@drawable/img_titlebar_basic"
                    app:layout_constraintTop_toBottomOf="@id/trip_topbar_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="25dp">
                    <TextView
                        android:id="@+id/tripcourse_period_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="21년 03월 10일 ~ 11일"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:fontFamily="@font/notosans_kr_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tripcourse_title_tv"
                        app:layout_constraintEnd_toStartOf="@id/tripcourse_period_str_tv"/>

                    <TextView
                        android:id="@+id/tripcourse_period_str_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tripcourse_period_tv"
                        app:layout_constraintBottom_toBottomOf="@id/tripcourse_period_tv"
                        tools:text="의 추억" />
                    <TextView
                        android:id="@+id/tripcourse_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="갑자기 떠난 1박 2일 제주"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/notosans_kr_bold"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/tripcourse_period_tv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <View
                android:id="@+id/main_content_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_title_fl"/>

            <!-- 리사이클러뷰 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_home_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="15dp"
                android:scrollbars="vertical"
                android:overScrollMode="never"
                android:scrollbarThumbVertical="@color/tripbook_main_3"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_title_fl"
                tools:listitem="@layout/item_card"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <!--자식 레이아웃. Navigation Drawer-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_left_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_main_left_drawer_header"
        app:menu="@menu/activity_main_left_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>