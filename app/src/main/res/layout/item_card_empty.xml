<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="252dp"
    android:background="@drawable/img_trip_card"
    >

    <ImageView
        android:id="@+id/item_card_empty_delete_ib"
        android:src="@drawable/btn_base_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <ImageView
            android:id="@+id/item_card_empty_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_basic_add"
            android:background="@drawable/bg_base_gray_background"
            android:padding="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--구분선-->
        <View
            android:id="@+id/item_card_empty_divitionline_view"
            android:layout_width="134dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/item_card_empty_pic_iv"
            app:layout_constraintStart_toStartOf="@id/item_card_empty_pic_iv"
            app:layout_constraintEnd_toEndOf="@id/item_card_empty_pic_iv"
            />

        <!--발자국 멘트 부분-->
        <TextView
            android:id="@+id/item_tripcourse_card_body_tv"
            android:text="@string/tripcourse_record_request"
            android:textSize="11sp"
            android:gravity="center_horizontal"
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/item_card_empty_divitionline_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>