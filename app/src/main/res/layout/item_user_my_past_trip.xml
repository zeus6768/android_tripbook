<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mypasttrip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minWidth="160dp"
        android:maxHeight="280dp"
        android:background="@drawable/bg_signin_rectangle_radius_20_transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mypasttrip_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_9"
        android:fontFamily="@font/notosans_kr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/mypasttrip_iv"
        app:layout_constraintEnd_toEndOf="@id/mypasttrip_iv"
        app:layout_constraintStart_toStartOf="@id/mypasttrip_iv"/>

    <TextView
        android:id="@+id/mypasttrip_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_11"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/mypasttrip_date_tv"
        app:layout_constraintEnd_toEndOf="@id/mypasttrip_iv"
        app:layout_constraintStart_toStartOf="@id/mypasttrip_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>